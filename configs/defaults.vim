set clipboard=unnamedplus
set encoding=UTF-8
syntax on

set termguicolors
set background=dark
set completeopt=menu,menuone,noselect
set nowrap
set ruler
set number
set mouse=a
set tabstop=2
set shiftwidth=2
set foldmethod=syntax
set foldlevel=99
set splitright
set signcolumn=yes

" Vim-test
let test#strategy = "neovim"

let g:fold_rspec_foldenable = 0
let g:fold_rspec_foldlevel = 2
